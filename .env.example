# =============================================================================
# REPLYHQ SAAS - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to `.env.local` and fill in your actual values.
# Variables with NEXT_PUBLIC_ are exposed to the browser.
# =============================================================================

# =============================================================================
# APPLICATION
# =============================================================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# BACKEND API (Python FastAPI on Railway)
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000
# Production: https://api.replyhq.ai

# =============================================================================
# SUPABASE AUTHENTICATION
# =============================================================================
# Get from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# =============================================================================
# DATABASE (Supabase PostgreSQL)
# =============================================================================
DATABASE_URL=postgresql://postgres:password@db.xxx.supabase.co:5432/postgres

# =============================================================================
# STRIPE PAYMENTS
# =============================================================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx
BILLING_PLAN_ENV=dev

# =============================================================================
# SENTRY ERROR TRACKING
# =============================================================================
NEXT_PUBLIC_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# =============================================================================
# ANALYTICS (Optional)
# =============================================================================
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
# NEXT_PUBLIC_POSTHOG_KEY=phc_xxxxxxxxx

# =============================================================================
# LOGTAIL (Optional - for server-side logging)
# =============================================================================
LOGTAIL_SOURCE_TOKEN=your-logtail-token
