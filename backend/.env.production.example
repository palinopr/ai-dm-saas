# =============================================================================
# BACKEND PRODUCTION ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and fill in your production values
# NEVER commit .env files with real credentials to version control
# =============================================================================

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------------------------------------
# PostgreSQL connection string (Railway auto-provisions this)
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://postgres:YOUR_PASSWORD@YOUR_HOST:5432/railway

# -----------------------------------------------------------------------------
# REDIS CONFIGURATION
# -----------------------------------------------------------------------------
# Redis connection string (Railway auto-provisions this)
# Format: redis://default:password@host:port
REDIS_URL=redis://default:YOUR_PASSWORD@YOUR_HOST:6379

# -----------------------------------------------------------------------------
# SECURITY CONFIGURATION
# -----------------------------------------------------------------------------
# JWT Secret Key - MUST be a strong, random 32+ character string
# Generate with: openssl rand -hex 32
SECRET_KEY=your-production-secret-key-minimum-32-characters

# JWT Algorithm (default: HS256)
ALGORITHM=HS256

# Token expiration in minutes (default: 30)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# -----------------------------------------------------------------------------
# CORS CONFIGURATION
# -----------------------------------------------------------------------------
# Allowed origins as JSON array - MUST include your production domain
# Example: ["https://replyhq.ai", "https://www.replyhq.ai"]
CORS_ORIGINS=["https://replyhq.ai", "https://www.replyhq.ai"]

# -----------------------------------------------------------------------------
# INSTAGRAM/META CONFIGURATION
# -----------------------------------------------------------------------------
# Get these from Meta Developer Console: https://developers.facebook.com/
# Webhook verification token (you create this, must match Meta dashboard)
INSTAGRAM_VERIFY_TOKEN=your-webhook-verify-token

# Instagram App Secret (from Meta Developer Console)
INSTAGRAM_APP_SECRET=your-instagram-app-secret

# Page Access Token (long-lived token from Meta)
INSTAGRAM_ACCESS_TOKEN=your-instagram-page-access-token

# Instagram Business Page ID
INSTAGRAM_PAGE_ID=your-instagram-page-id

# -----------------------------------------------------------------------------
# OPENAI CONFIGURATION
# -----------------------------------------------------------------------------
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key

# OpenAI API Base URL (default, usually no need to change)
OPENAI_API_BASE=https://api.openai.com/v1

# Model to use for AI responses
OPENAI_MODEL=gpt-4.1-mini

# Temperature for response creativity (0.0 - 1.0)
OPENAI_TEMPERATURE=0.7

# Maximum tokens for AI responses
OPENAI_MAX_TOKENS=500

# -----------------------------------------------------------------------------
# SHOPIFY CONFIGURATION
# -----------------------------------------------------------------------------
# Get these from Shopify Admin > Apps > Develop apps
# Your Shopify store URL (without https://)
SHOPIFY_STORE_URL=your-store.myshopify.com

# Shopify API Key
SHOPIFY_API_KEY=your-shopify-api-key

# Shopify Admin API Access Token (starts with shpat_)
SHOPIFY_ACCESS_TOKEN=shpat_your-access-token
