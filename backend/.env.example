# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/ai_dm_automation

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=["http://localhost:3000"]

# Redis
REDIS_URL=redis://localhost:6379

# Instagram API Configuration
# Get these from Meta Developer Portal: https://developers.facebook.com/
INSTAGRAM_VERIFY_TOKEN=your-webhook-verify-token
INSTAGRAM_APP_SECRET=your-instagram-app-secret
INSTAGRAM_ACCESS_TOKEN=your-page-access-token
INSTAGRAM_PAGE_ID=your-instagram-page-id

# AI Agent / LLM Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL=gpt-4.1-mini
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=500

# Shopify E-commerce Configuration
# Get these from Shopify Admin: https://admin.shopify.com/store/{store}/settings/apps/development
SHOPIFY_STORE_URL=your-store.myshopify.com
SHOPIFY_API_KEY=your-shopify-api-key
SHOPIFY_ACCESS_TOKEN=shpat_xxxxxxxxxxxxxxxxxxxxx
